@model Evidence9.Models.ViewModels.EmployeeVM
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-6">
            <h2>Add New Employee</h2>
            <div  asp-validation-summary="ModelOnly"></div>
            <div class="row mb-2">
                <label asp-for="EmployeeName" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="EmployeeName" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <span asp-validation-for="EmployeeName"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="JoinDate" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="JoinDate" class="form-control form-control-sm" type="date" />
                </div>
                <div class="col-2">
                    <span asp-validation-for="JoinDate"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Salary" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="Salary" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <span asp-validation-for="Salary"></span>
                </div>
            </div>
                 <div class="row mb-2">
                <label asp-for="PictureFile" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="PictureFile" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <span asp-validation-for="PictureFile"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="ActiverStatus" class="col-form-label col-3"></label>
                <div class="col-7">
                    <span class="form-check-label">
                        @Html.CheckBoxFor(x=>x.ActiverStatus)
                    </span>
                </div>
                <div class="col-2">
                    <span asp-validation-for="ActiverStatus"></span>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>Add Skills</h2>
            <div class="d-flex justify-content-end" >
                <a id="btnAdd" class="btn btn-primary btn-sm">Add</a>
            </div>
            <div id="container">
                <script>
                    LoadData();
                </script>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

